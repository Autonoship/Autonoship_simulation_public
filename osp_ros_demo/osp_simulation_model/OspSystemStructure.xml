        <SignalGroupConnection>
            <VariableGroup simulator="autopilot" name="u1"/>
            <SignalGroup function="negate" name="in"/>
        </SignalGroupConnection>
        <SignalGroupConnection>
            <VariableGroup simulator="ship_dynamics" name="u1_input"/>
            <SignalGroup function="negate" name="out"/>
        </SignalGroupConnection>
-->

    </Connections>
    
    
</OspSystemStructure>

